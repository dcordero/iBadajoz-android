<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#FF0000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/contact_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0083a3"
                android:background="#90FFFFFF"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                tools:text="Contact Name"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/contact_address_section"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#70FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#0083a3"
                    android:textSize="15sp"
                    android:text="@string/contact_address"/>

                <TextView
                    android:id="@+id/contact_address_label"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="#0083a3"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:text="C\ Perez 23"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_phone_section"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#70FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#0083a3"
                    android:textSize="15sp"
                    android:text="@string/contact_phone"/>

                <TextView
                    android:id="@+id/contact_phone_label"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="#0083a3"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:text="555 453 323"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_web_section"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="#70FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#0083a3"
                    android:textSize="15sp"
                    android:text="@string/contact_web"/>

                <TextView
                    android:id="@+id/contact_web_label"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:textColor="#0083a3"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    tools:text="www.google.com"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>